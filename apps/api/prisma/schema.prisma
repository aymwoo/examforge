generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(cuid())
  username         String         @unique
  email            String?        @unique
  password         String
  name             String
  role             String         @default("STUDENT")
  isActive         Boolean        @default(false)
  isApproved       Boolean        @default(false)
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")
  aiProviders      AIProvider[]   @relation("CreatedAIProviders")
  createdClasses   Class[]        @relation("CreatedClasses")
  createdExams     Exam[]         @relation("CreatedBy")
  importRecords    ImportRecord[] @relation("ImportRecords")
  createdQuestions Question[]     @relation("CreatedBy")
  userSettings     UserSetting[]

  @@map("users")
}

model AIProvider {
  id        String   @id @default(cuid())
  name      String
  apiKey    String
  baseUrl   String?
  model     String
  isGlobal  Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdBy String?  @map("created_by")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  creator   User?    @relation("CreatedAIProviders", fields: [createdBy], references: [id])

  @@map("ai_providers")
}

model Question {
  id             String         @id @default(cuid())
  content        String
  type           String
  options        String?
  answer         String?
  explanation    String?
  illustration   String?
  tags           String
  difficulty     Int            @default(1)
  status         String         @default("DRAFT")
  knowledgePoint String?
  isPublic       Boolean        @default(true) @map("is_public")
  createdBy      String?        @map("created_by")
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")
  images         String?        @default("[]")
  importOrder    Int?           @map("import_order")
  examQuestions  ExamQuestion[]
  creator        User?          @relation("CreatedBy", fields: [createdBy], references: [id])

  @@map("questions")
}

model Exam {
  id                   String         @id @default(cuid())
  title                String
  description          String?
  duration             Int
  totalScore           Int            @default(100)
  status               String         @default("DRAFT")
  accountModes         String         @default("[\"TEMPORARY_IMPORT\"]") @map("account_modes")
  startTime            DateTime?
  endTime              DateTime?
  createdBy            String?        @map("created_by")
  createdAt            DateTime       @default(now()) @map("created_at")
  updatedAt            DateTime       @updatedAt @map("updated_at")
  aiAnalysisModel      String?        @map("ai_analysis_model")
  aiAnalysisPromptUsed String?        @map("ai_analysis_prompt_used")
  aiAnalysisProviderId String?        @map("ai_analysis_provider_id")
  aiAnalysisReport     String?        @map("ai_analysis_report")
  aiAnalysisStatus     String?        @map("ai_analysis_status")
  aiAnalysisUpdatedAt  DateTime?      @map("ai_analysis_updated_at")
  feedbackVisibility   String         @default("FINAL_SCORE") @map("feedback_visibility")
  deletedAt            DateTime?      @map("deleted_at")
  examQuestions        ExamQuestion[]
  examStudents         ExamStudent[]
  creator              User?          @relation("CreatedBy", fields: [createdBy], references: [id])
  submissions          Submission[]

  @@map("exams")
}

model ExamQuestion {
  id         String   @id @default(cuid())
  examId     String
  questionId String
  order      Int
  score      Int      @default(1)
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  exam       Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)

  @@unique([examId, questionId])
  @@index([examId])
  @@index([questionId])
  @@map("exam_questions")
}

model Submission {
  id                   String       @id @default(cuid())
  examId               String
  examStudentId        String?      @map("exam_student_id")
  answers              String
  score                Float?
  isAutoGraded         Boolean      @default(false)
  isReviewed           Boolean      @default(false)
  reviewedBy           String?      @map("reviewed_by")
  reviewedAt           DateTime?    @map("reviewed_at")
  gradingDetails       String?      @map("grading_details")
  submittedAt          DateTime     @default(now()) @map("submitted_at")
  aiAnalysisModel      String?      @map("ai_analysis_model")
  aiAnalysisPromptUsed String?      @map("ai_analysis_prompt_used")
  aiAnalysisProvider   String?      @map("ai_analysis_provider")
  aiAnalysisReport     String?      @map("ai_analysis_report")
  aiAnalysisStatus     String?      @map("ai_analysis_status")
  aiAnalysisUpdatedAt  DateTime?    @map("ai_analysis_updated_at")
  examStudent          ExamStudent? @relation(fields: [examStudentId], references: [id], onDelete: Cascade)
  exam                 Exam         @relation(fields: [examId], references: [id], onDelete: Cascade)

  @@index([examId])
  @@map("submissions")
}

model ExamStudent {
  id                String                    @id @default(cuid())
  examId            String                    @map("exam_id")
  username          String
  password          String
  displayName       String?                   @map("display_name")
  accountType       String                    @default("TEMPORARY") @map("account_type")
  studentId         String?                   @map("student_id")
  createdAt         DateTime                  @default(now()) @map("created_at")
  updatedAt         DateTime                  @updatedAt @map("updated_at")
  student           Student?                  @relation(fields: [studentId], references: [studentId])
  exam              Exam                      @relation(fields: [examId], references: [id], onDelete: Cascade)
  aiAnalysisReports StudentAiAnalysisReport[]
  submissions       Submission[]

  @@unique([examId, username])
  @@map("exam_students")
}

model Student {
  id               String        @id @default(cuid())
  studentId        String        @unique @map("student_id")
  name             String
  classId          String?       @map("class_id")
  password         String
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  gender           String?
  aiAnalysisPrompt String?       @map("ai_analysis_prompt")
  examStudents     ExamStudent[]
  class            Class?        @relation(fields: [classId], references: [id])

  @@map("students")
}

model Class {
  id          String    @id @default(cuid())
  name        String
  code        String    @unique
  description String?
  createdBy   String?   @map("created_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  creator     User?     @relation("CreatedClasses", fields: [createdBy], references: [id])
  students    Student[]

  @@map("classes")
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_settings")
}

model UserSetting {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  key       String
  value     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@map("user_settings")
}

model StudentAiAnalysisReport {
  id            String       @id @default(cuid())
  submissionId  String       @unique @map("submission_id")
  examId        String       @map("exam_id")
  examStudentId String?      @map("exam_student_id")
  studentId     String?      @map("student_id")
  status        String       @default("PENDING")
  progress      Int          @default(0)
  providerId    String?      @map("provider_id")
  model         String?
  promptUsed    String?      @map("prompt_used")
  report        String?
  errorMessage  String?      @map("error_message")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")
  examStudent   ExamStudent? @relation(fields: [examStudentId], references: [id])

  @@index([examId, examStudentId])
  @@index([studentId])
  @@map("student_ai_analysis_reports")
}

model ImportRecord {
  id           String    @id @default(cuid())
  jobId        String    @unique @map("job_id")
  fileName     String    @map("file_name")
  fileSize     Int       @map("file_size")
  filePath     String?   @map("file_path")
  userId       String?   @map("user_id")
  mode         String    @default("vision")
  status       String    @default("processing")
  questionIds  String    @default("[]") @map("question_ids")
  errorMessage String?   @map("error_message")
  createdAt    DateTime  @default(now()) @map("created_at")
  completedAt  DateTime? @map("completed_at")
  user         User?     @relation("ImportRecords", fields: [userId], references: [id])

  @@map("import_records")
}
